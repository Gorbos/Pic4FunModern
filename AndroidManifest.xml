<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jpact.pic4funmodern.ui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    
     <!-- Here we set the permissions needed by our app -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.SET_WALLPAPER" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/iconwbg"
        android:label="@string/app_name"
        android:theme="@style/appThemeNoOverlayNoTitleBar" 
        android:name="jpact.pic4funmodern.ui.Jpact"
         android:screenOrientation="portrait">
        
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        
         <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize"
            >
        </activity>
        
         
         <activity 
        android:name=".FacebookFriends"
        android:label="Select Friends"
        android:configChanges="locale|keyboardHidden|orientation"
        android:alwaysRetainTaskState="true"
        android:windowSoftInputMode="adjustResize"
        android:theme="@style/appThemeNoOverlayNoTitleBar">
        </activity>
        
         <activity
            android:name=".menu.CameraActivity"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize"
            >
        </activity>
        
         <activity
            android:name=".menu.CameraFragment"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize"
            >
        </activity>
        
         <activity
            android:name=".menu.FunActivity"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize"
            >
        </activity>
        
         <activity
            android:name=".menu.CircleofFriendsActivity"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize"
            >
        </activity>
        
         <activity
            android:name=".menu.PhotosActivity"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize"
            >
        </activity>
        
         <activity
            android:name=".menu.SellPhotoActivity"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize"
            >
        </activity>
        
        
         <activity
            android:name=".popups.GridBitmapActivityFragment"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize"
			android:theme="@style/Theme.Dim"
            >
        </activity>
        
          <activity
            android:name=".popups.CollageBitmapActivityFragment"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize"
			android:theme="@style/Theme.Dim"
            >
        </activity>
        
         <activity
            android:name=".popups.EditTextBitmapActivityFragment"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait"
			android:configChanges="locale|orientation|screenSize"
			android:theme="@style/Theme.Dim"
            >
        </activity>
        
        <activity
        android:name=".sharing.utils.GallSelectedImages"
        android:label="Photos"
        android:theme="@style/appThemeNoOverlayNoTitleBar"
        android:screenOrientation="portrait"
        android:configChanges="locale|keyboardHidden|orientation"
        android:alwaysRetainTaskState="true">
        </activity>
        
        <activity 
        android:name=".sharing.utils.GallSelectedFBFriends"
        android:label="Select Friends"
        android:configChanges="locale|keyboardHidden|orientation"
        android:alwaysRetainTaskState="true"
        android:windowSoftInputMode="adjustResize"
        android:screenOrientation="portrait"
        android:theme="@style/appThemeNoOverlayNoTitleBar">
        </activity>
        
        <!-- Draw4Fun classes -->
        <activity
        android:name="com.jpact.draw4fun.Draw4FunMain"
        android:screenOrientation="portrait"
        android:configChanges="locale|keyboardHidden|orientation"
        android:alwaysRetainTaskState="true"
        >
        </activity>
        
        
        
    </application>

</manifest>