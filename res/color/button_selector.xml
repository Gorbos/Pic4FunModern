<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#E9E9E9"
                android:endColor="#C9C9C9"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#A09F9F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="13dp"
                android:right="10dp"
                android:bottom="13dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#E9E9E9"
                android:endColor="#C9C9C9"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#A09F9F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="13dp"
                android:right="10dp"
                android:bottom="13dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#747272"
                android:endColor="#4D4D4D"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#A09F9F" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="13dp"
                android:right="10dp"
                android:bottom="13dp" />
        </shape>
    </item>
</selector>
